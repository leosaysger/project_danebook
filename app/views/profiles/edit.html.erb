<%= form_for @user.profile, html: { class: "form-inline"} do |profile_fields| %>
<%= profile_fields.text_field :first_name, class: "form-control" %>
<%= profile_fields.text_field :last_name, class: "form-control"%>
<%= profile_fields.text_area :about, class: "form-control"%>
<%= profile_fields.date_select(:birthday, { :order => [:day, :month, :year], :start_year => Date.today.year, :end_year => 150.years.ago.year }, {:class => 'form-control'}) %>
<%= profile_fields.submit "Update" %>
<% end %>
