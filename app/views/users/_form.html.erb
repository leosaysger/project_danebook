<%= form_for User.new do |user_fields| %>
<div class="form-group">
    <div class="row">
        <div class="col-sm-6">
            <%= user_fields.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
    </div>
    <div class="row">

        <div class="col-sm-6">
            <%= user_fields.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <%= user_fields.password_field :password, class: "form-control", placeholder: "Password" %>
        </div>
        <div class="col-sm-6">
            <%= user_fields.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
        </div>
    </div>
    <br>
    <%= user_fields.submit class:"btn btn-lg btn-block btn-success" %>
</div>
<% end %>
